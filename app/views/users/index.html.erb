<p id="notice"><%= notice %></p>

<h1>Listing User</h1>

<% if user_signed_in? %>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Username</th>
      <th>Name</th>
      <th>Lastname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= current_user.user_id %></td>
        <td><%= current_user.username %></td>
        <td><%= current_user.name %></td>
        <td><%= current_user.lastname %></td>
        <td><%= link_to 'Show', current_user %></td>
        <td><%= link_to 'Edit', edit_user_path(current_user) %></td>
        <td><%= link_to 'Destroy', current_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  </tbody>
</table>
<%end%>

