<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>
<h2>Tareas terminadas</h2>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th>Duration</th>
      <th>Startdate</th>
      <th>Deadline</th>
      <th>Author</th>
      <th>Checked</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @terminadas.each do |task| %>
      <tr>
        <td><%= task.user_id %></td>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.duration %></td>
        <td><%= task.startdate %></td>
        <td><%= task.deadline %></td>
        <td><%= task.author %></td>
        <td><%= task.checked %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
